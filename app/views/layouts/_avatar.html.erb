<% if current_user.avatar? %>
	<%= link_to edit_user_registration_path do %>
		<%= cl_image_tag(current_user.avatar.path, { size: '250x250', crop: :thumb, gravity: :face }) %>
	<% end %>
<% else %>
	<%= link_to edit_user_registration_path do %>
		<%= cl_image_tag("bnw/assets/84238.jpg") %>
	<% end %>
<% end %>